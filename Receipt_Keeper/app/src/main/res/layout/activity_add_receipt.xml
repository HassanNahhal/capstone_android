<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.conestogac.receipt_keeper.AddReceiptActivity">

    <TextView
        android:id="@+id/storeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:text="@string/store_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/storeNamEditText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/storeNameTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:text="@string/total"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/storeNameTextView"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/totalEditText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/totalTextView"
        android:layout_alignStart="@+id/storeNamEditText"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totalEditText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/dateTextView"
        android:layout_alignStart="@+id/totalEditText"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/saveReceiptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/receiptIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receipt_id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/receiptIdTextView2"
        android:layout_alignParentStart="false" />

    <TextView
        android:id="@+id/receiptIdTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/searchMultiSpinner"
        android:layout_alignStart="@+id/searchMultiSpinner" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/categoryTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <com.conestogac.receipt_keeper.MultiSpinnerSearch
        android:id="@+id/searchMultiSpinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/categorySearchMultiSpinner"
        android:layout_alignStart="@+id/categorySearchMultiSpinner" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/receiptIdTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category"
        android:id="@+id/categoryTextView"
        android:layout_below="@+id/paymentTextView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />

    <com.conestogac.receipt_keeper.MultiSpinnerSearch
        android:id="@+id/categorySearchMultiSpinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/paymentEditText"
        android:layout_alignStart="@+id/paymentEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/comentTextView"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/dateTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/commentEditText"
        android:layout_alignBottom="@+id/comentTextView"
        android:layout_alignStart="@+id/dateEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Payment"
        android:id="@+id/paymentTextView"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/comentTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/paymentEditText"
        android:layout_alignBottom="@+id/paymentTextView"
        android:layout_alignStart="@+id/commentEditText" />

</RelativeLayout>
