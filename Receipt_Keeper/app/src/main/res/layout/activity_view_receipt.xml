<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.conestogac.receipt_keeper.ViewReceiptActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:fillViewport="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/design_snackbar_background"
            android:backgroundTint="@android:color/transparent"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:nestedScrollingEnabled="false"
            android:padding="2dp"
            android:useDefaultMargins="true"
            android:focusable="true"
            android:clickable="true">


            <ImageButton
                android:id="@+id/viewReceiptImageButton"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_marginBottom="20dp"
                android:layout_row="0"
                android:contentDescription="@string/image_of_the_receipt" />

            <ImageView
                android:id="@+id/viewReceiptIdImageVIew"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="1"
                android:src="@drawable/ic_receipt_black_24dp"
                android:text="@string/receipt_id"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewReceiptIdTextView"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="1"
                android:gravity="center_vertical"
                android:hint="Receipt ID"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/viewStoreNameImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="2"
                android:src="@drawable/ic_domain_black_24dp"
                android:text="@string/store_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewStoreNamTextView"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="2"
                android:gravity="center_vertical"
                android:hint="Store name"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/viewTotalImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical|left"
                android:layout_row="3"
                android:src="@drawable/ic_attach_money_black_24dp"
                android:text="@string/total"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewTotalTextView"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="3"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Total"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/viewPaymentImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="4"
                android:src="@drawable/ic_payment_black_24dp"
                android:text="@string/payment"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewPaymentTextView"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="4"
                android:gravity="center_vertical"
                android:hint="Payment method"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/viewDateImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="5"
                android:src="@drawable/ic_date_range_black_24dp"
                android:text="@string/date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewDateTextView"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="5"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Date"
                android:inputType="date"
                android:singleLine="true"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/viewTagImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="6"
                android:src="@drawable/ic_label_outline_black_24dp"
                android:text="@string/tag"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewTagTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="6"
                android:gravity="center_vertical"
                android:hint="Tag"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/viewCategoryImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="7"
                android:src="@drawable/ic_folder_open_black_24dp"
                android:text="@string/category"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/viewCategoryTextView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="7"
                android:gravity="center_vertical"
                android:hint="Category"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/viewCommentImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="8"
                android:src="@drawable/ic_comment_black_24dp"
                android:text="@string/comment"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/viewCommentTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="8"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Comment"
                android:textSize="18sp" />


        </GridLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/viewEditReceiptButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white" />
</LinearLayout>
